@model relmon.Models.aturan
@using relmon.Utilities;
@using relmon.Controllers.Admin
@using relmon.Models;
<h4>Upload File Charter</h4> 
<script>
    function onSuccess(e) {
        var files = e.files;
        if (e.operation == "upload") {
            //save to database
            $.post("AturanRegulasiAdmin/UploadCharter", { filename: files[0].name }, function (data) {
                if (data == "True") {
                    alert("File berhasil di-upload");
                    loadIframe('frame-content2', '/AturanRegulasi/GetPdf?tipe=charter');
                } else {
                    alert("File tidak berhasil di-upload");
                }

            });

        } else if (e.operation == "remove") {
            $.post("AturanRegulasiAdmin/DeleteCharter", "", function (data) {
            if (data == "True") {
                $("#frame-content2").contents().find("html").remove();
                alert("File berhasil dihapus");
            } else {
                alert("File tidak berhasil dihapus");
            }
        });
        }
    }

    function onLoad(e) {
        console.log(e);
    }

    function onUpload(e) {
        @{
            int aclId = (int)Session["id"];
            if (!ACLHandler.isUserAllowedTo(PageItem.AturanRegulasi_Charter.name, aclId, "create")){
                <text>return false;</text>
            }
        }
        // Array with information about the uploaded files
        var files = e.files;

        // Check the extension of each file and abort the upload if it is not .jpg
        if (files[0].extension != ".pdf") {
            alert("Only .pdf files can be uploaded")
            e.preventDefault();
            return false;
        }
    }

    function onRemove(e) {
         @{
            int aclId2 = (int)Session["id"];
            if (!ACLHandler.isUserAllowedTo(PageItem.AturanRegulasi_Charter.name, aclId2, "delete")){
                <text>return false;</text>
            }
                
            
        }
        var r = confirm("Apakah anda yakin?");
        if (r) {
            return true;
        } else {
            e.preventDefault();
            return false;
        }
    }

    $(document).ready(function () {

        if ('@(Model.filename)' != "") {
            loadIframe('frame-content2', '/AturanRegulasi/GetPdf?tipe=charter');
        }
        var $fileList, $files, item, _fn, _i, _len;

        $fileList = $("#existing-files2");

        if ($fileList.length > 0) {
            $("#charter .t-upload").append($fileList);
            $files = $(".t-file");
            _fn = function (item) {
                var $item, fileId, filenames;
                $item = $(item);
                fileId = $item.data("att-id");
                filenames = [
                          {
                              name: fileId
                          }
                        ];
                return $item.data("fileNames", filenames);
            };
            for (_i = 0, _len = $files.length; _i < _len; _i++) {
                item = $files[_i];
                _fn(item);
            }
            $fileList.show();
        }

    });
</script>
<div id="upCharter">
    @(Html.Telerik().Upload()
                 .Name("attachmentsCharter")
        .ClientEvents(events => events
            .OnSuccess("onSuccess")
            .OnLoad("onLoad")
            .OnUpload("onUpload")
            .OnRemove("onRemove")
        )
        .Multiple(false)
        .Async(async => async
            .Save("Save", "Upload", "attachments", new { dir = "Aturan\\Charter"})
            .Remove("Remove", "Upload", new { dir = "Aturan\\Charter" })
            .AutoUpload(true)
        )
    )
    <div class="controls">
		@{
            if (!string.IsNullOrWhiteSpace(Model.filename))
            {
                <ul id="existing-files2" class="t-upload-files t-reset" style="display: none;"><li class="t-file" data-att-id="@(Model.filename)"><span class="t-icon t-success">uploaded</span><span class="t-filename" title="@(Model.filename)">@(Model.filename)<span class="t-progress"><span class="t-state-selected t-progress-status" style="width: 100%;"></span></span></span><button type="button" class="t-button t-button-icontext t-upload-action"><span class="t-icon t-delete"></span>Remove</button></li></ul>
            }
        }                       
	</div>
</div>
<br/>
<iframe id="frame-content2" name="frame-content" src="" width="960" height="400" style="border:0px solid #000;"></iframe>