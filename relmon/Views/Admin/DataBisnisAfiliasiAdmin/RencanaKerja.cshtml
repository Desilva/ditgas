
@model relmon.Models.bisnis_main
<h4>Upload File Rencana Kerja</h4> 

<script>
    function onSuccess(e) {
        var files = e.files;
        if (e.operation == "upload") {
            //save to database
            $.post("DataBisnisDitGasAdmin/UploadRencanaKerja", { filename: files[0].name }, function (data) {
                if (data == "True") {
                    alert("File berhasil di-upload");
                    loadIframe('frame-content', '/DataBisnisAp/GetPdfVisiMisi/@ViewBag.id');
                } else {
                    alert("File tidak berhasil di-upload");
                }

            });

        } else if (e.operation == "remove") {
            $.post("DataBisnisDitGasAdmin/DeleteRencanaKerja", "", function (data) {
                if (data == "True") {
                    alert("File berhasil dihapus");
                    $("#frame-content").contents().find('html').html('');
                } else {
                    alert("File tidak berhasil dihapus");
                }
            });
        }
    }

    function onLoad(e) {
        console.log(e);
    }

    function onUpload(e) {
        // Array with information about the uploaded files
        var files = e.files;

        // Check the extension of each file and abort the upload if it is not .jpg
        if (files[0].extension != ".pdf") {
            alert("Only .pdf files can be uploaded")
            e.preventDefault();
            return false;
        }
    }
    function onRemove(e) {
        var r = confirm("Apakah anda yakin?");
        if (r) {
            return true;
        } else {
            e.preventDefault();
            return false;
        }
    }

    $(document).ready(function () {

        if ('@(Model.visimisi)' != "") {
            loadIframe('frame-content', '/DataBisnisDitGas/getPDF/2');
        }
        var $fileList, $files, item, _fn, _i, _len;

        $fileList = $("#existing-files");

        if ($fileList.length > 0) {
            $(".t-upload").append($fileList);
            $files = $(".t-file");
            _fn = function (item) {
                var $item, fileId, filenames;
                $item = $(item);
                fileId = $item.data("att-id");
                filenames = [
                          {
                              name: fileId
                          }
                        ];
                return $item.data("fileNames", filenames);
            };
            for (_i = 0, _len = $files.length; _i < _len; _i++) {
                item = $files[_i];
                _fn(item);
            }
            $fileList.show();
        }

    });
</script>

    @(Html.Telerik().Upload()
                .Name("attachmentsRencanaKerja2")
        .ClientEvents(events => events
            .OnSuccess("onSuccess")
            .OnLoad("onLoad")
            .OnUpload("onUpload")
            .OnRemove("onRemove")
        )
        .Multiple(false)
        .Async(async => async
                    .Save("Save", "Upload", "attachments", new { dir = "Data Bisnis\\" + Model.company_id + "\\rencana kerja" })
                    .Remove("Remove", "Upload", new { dir = "Data Bisnis\\" + Model.company_id + "\\rencana kerja" })
            .AutoUpload(true)
        )
    )
    <div class="controls">
		@{
            if (!string.IsNullOrWhiteSpace(Model.visimisi)){
                <ul id="existing-files" class="t-upload-files t-reset" style="display: none;"><li class="t-file" data-att-id="@(Model.visimisi)"><span class="t-icon t-success">uploaded</span><span class="t-filename" title="@(Model.visimisi)">@(Model.visimisi)<span class="t-progress"><span class="t-state-selected t-progress-status" style="width: 100%;"></span></span></span><button type="button" class="t-button t-button-icontext t-upload-action"><span class="t-icon t-delete"></span>Remove</button></li></ul>
            }
        }                       
	</div>

<br/>
<iframe id="frame-content" name="frame-content" src="" width="960" height="400" style="border:0px solid #000;"></iframe>
