@(Html.Telerik().PanelBar()
    .Name("RoadMap")
    .HtmlAttributes(new { style = "width: 900px; margin-bottom: 10px;" })
    .Items(panelBarItem =>
    {
        panelBarItem.Add()
            .Text("Road Map Natural Gas Technology Application")
            .Content(@<text>
                <iframe id="frame-content" name="frame-content" src="/Dashboard/GetPdfRoadMap" width="900" height="400" style="border:0px solid #000;margin-left:20px;margin-top:20px;"></iframe>
                </text>)
            .Expanded(false);
    })
        .ExpandMode(PanelBarExpandMode.Multiple)
    )
<br />
<hr />
@using (Html.BeginForm("uploadRoadMap", "DashboardDefault", FormMethod.Post, new { id = "formUpload", enctype = "multipart/form-data", name = "formUpload", target = "refresh_targetRoadMap" }))
{
    <div class="info_inside_left">Upload Road Map (.pdf) :</div> 
		 <input type="text" id="fileName" class="file_input_textbox" readonly="readonly" />
		 <div class="file_input_div">
			<input type="button" value="Cari" class="file_input_button" />
			<input type="file" class="file_input_hidden" name="userfile" onchange="javascript: document.getElementById('fileName').value = this.value" />
		 </div>
		 <br />
		 <input type="button" value="Upload" onclick="javascript:if(document.formUpload.userfile.value.length==0) { alert('You must specify a file first'); return; }; submit(); hideRoadMap()" />
}