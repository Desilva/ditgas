
<script>


    $(document).ready(function () {




        var currentYear = new Date().getFullYear();

        for (var i = 1; i <= 10; i++) {
            $("#tahun").append(
                "<option value ='" + currentYear + "'>" + currentYear + "</option>"
            );
            currentYear--;
        }

        var tahun = '@ViewBag.tahun';
        if (tahun == -1) {
            tahun = new Date().getFullYear();
            $.post("DataBisnisAp/Kinerja/@ViewBag.id", { tahun: tahun }, function (data) {
                $("#TabStrip .t-link").each(function (index) {
                    if ($(this).text() == "KPI") {
                        $("#TabStrip-" + (index + 1)).html(data);
                    }
                });
            });
        }
        $("#tahun").val(tahun);
        $("#tahun").bind("change", function () {
            if ($('#tahun').val() != "") {
                //                alert("a");
                var tabStrip = $("#TabStrip").data("tTabStrip");
                $.post("DataBisnisAp/Kinerja/@ViewBag.id", { tahun: $('#tahun').val() }, function (data) {
                    $("#TabStrip .t-link").each(function (index) {
                        if ($(this).text() == "KPI") {
                            $("#TabStrip-" + (index + 1)).html(data);
                        }
                    });

                });
                //$("#panelbar").show();
            } else {
                //$("#panelbar").hide();
            }
        });
    });
</script>
