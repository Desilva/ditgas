<script type="text/javascript">
    function onSelectPanel(e) {
        var item = $(e.item);
        var type = (item.find('> .t-link').text());

        if (type == "Kinerja Keuangan") {
            $("#BRcontent").load("DataBisnisAp/KinerjaKeuangan/"+@ViewBag.id+"?tahun="+@ViewBag.tahun);
        } else if (type == "Kinerja Pertumbuhan") {
            $("#BRcontent").load("DataBisnisAp/KinerjaPertumbuhan/" + @ViewBag.id + "?tahun=" + @ViewBag.tahun);
        } else if (type == "Kinerja Administrasi") {
            $("#BRcontent").load("DataBisnisAp/KinerjaAdministrasi/" + @ViewBag.id + "?tahun=" + @ViewBag.tahun);
        } else if (type == "Kinerja Kesehatan") {
            $("#BRcontent").load("DataBisnisAp/KinerjaKesehatan/" + @ViewBag.id + "?tahun=" + @ViewBag.tahun);
        }
    }
</script>
<div style="overflow:hidden;">

<div id="nav" style="float:left;">
@(Html.Telerik().PanelBar()
        .Name("PanelBar")
        .HtmlAttributes(new { style = "width: 175px; margin-bottom: 30px;clear: both;margin-left: 10px;" })
        .ClientEvents(eventsPanel => eventsPanel
              .OnSelect("onSelectPanel")
        )
        .Items(panelBarItem =>
        {
            panelBarItem.Add().Text("Kinerja Keuangan");
            panelBarItem.Add().Text("Kinerja Pertumbuhan");
            panelBarItem.Add().Text("Kinerja Administrasi");
            panelBarItem.Add().Text("Kinerja Kesehatan");
        })
)
</div>
