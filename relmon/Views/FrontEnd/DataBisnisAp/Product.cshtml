@model IEnumerable<relmon.Models.BisnisProductContainer>
<script>
    
</script>


@{
    
    

    if(@ViewBag.tahun == -1){
        @(Html.Telerik().Chart<relmon.Models.BisnisProductContainer>()
            .Name("ProductChart2")
            .Legend(legend => legend
                .Position(ChartLegendPosition.Bottom)
            )
            .SeriesDefaults(series =>
            {
                series.Column().Stack(true);
            })
            .Series(series =>
            {
                    series.Column(s => s.januari).Name("Jan");
                    series.Column(s => s.februari).Name("Feb");
                    series.Column(s => s.maret).Name("Mar");
                    series.Column(s => s.april).Name("Apr");
                    series.Column(s => s.mei).Name("May");
                    series.Column(s => s.juni).Name("Jun");
                    series.Column(s => s.juli).Name("Jul");
                    series.Column(s => s.agustus).Name("Aug");
                    series.Column(s => s.september).Name("Sep");
                    series.Column(s => s.oktober).Name("Oct");
                    series.Column(s => s.november).Name("Nov");
                    series.Column(s => s.desember).Name("Des");
                
            })
            .CategoryAxis(axis => axis
                .Categories(s => s.tahun)
            )
            .DataBinding(dataBinding => dataBinding
                .Ajax().Select("_ProductData2", "DataBisnisAp", new { id = ViewBag.id , produk=ViewBag.produk, tahun = ViewBag.fromYear, tahunAkhir = ViewBag.toYear})
            )
            .HtmlAttributes(new { style = "width: 670px; height: 500px;" })
        )
    }else{
        @(Html.Telerik().Chart<relmon.Models.BisnisProductContainer>()
            .Name("ProductChart")
            .Legend(legend => legend
                .Position(ChartLegendPosition.Bottom)
            )
            .SeriesDefaults(series =>
            {
                series.Column().Stack(false);
            })
            .Series(series =>
            {

                if (ViewBag.fromMonthNum <= 1 && ViewBag.toMonthNum >= 1)
                {
                    series.Column(s => s.januari).Name("Jan");
                }
                if (ViewBag.fromMonthNum <= 2 && ViewBag.toMonthNum >= 2)
                {
                    series.Column(s => s.februari).Name("Feb");
                }
                if (ViewBag.fromMonthNum <= 3 && ViewBag.toMonthNum >= 3)
                {
                    series.Column(s => s.maret).Name("Mar");
                }
                if (ViewBag.fromMonthNum <= 4 && ViewBag.toMonthNum >= 4)
                {
                    series.Column(s => s.april).Name("Apr");
                }
                if (ViewBag.fromMonthNum <= 5 && ViewBag.toMonthNum >= 5)
                {
                    series.Column(s => s.mei).Name("May");
                }
                if (ViewBag.fromMonthNum <= 6 && ViewBag.toMonthNum >= 6)
                {
                    series.Column(s => s.juni).Name("Jun");
                }
                if (ViewBag.fromMonthNum <= 7 && ViewBag.toMonthNum >= 7)
                {
                    series.Column(s => s.juli).Name("Jul");
                }
                if (ViewBag.fromMonthNum <= 8 && ViewBag.toMonthNum >= 8)
                {
                    series.Column(s => s.agustus).Name("Aug");
                }
                if (ViewBag.fromMonthNum <= 9 && ViewBag.toMonthNum >= 9)
                {
                    series.Column(s => s.september).Name("Sep");
                }
                if (ViewBag.fromMonthNum <= 10 && ViewBag.toMonthNum >= 10)
                {
                    series.Column(s => s.oktober).Name("Oct");
                }
                if (ViewBag.fromMonthNum <= 11 && ViewBag.toMonthNum >= 11)
                {
                    series.Column(s => s.november).Name("Nov");
                }
                if (ViewBag.fromMonthNum <= 12 && ViewBag.toMonthNum >= 12)
                {
                    series.Column(s => s.desember).Name("Des");
                }
            })
            .CategoryAxis(axis => axis
                .Categories(s => s.product)
            )
            .DataBinding(dataBinding => dataBinding
                .Ajax().Select("_ProductData", "DataBisnisAp", new { id = ViewBag.id , produk=ViewBag.produk, tahun = ViewBag.tahun})
            )
            .HtmlAttributes(new { style = "width: 670px; height: 500px;" })
        )
    }
}