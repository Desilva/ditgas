@using System.IO;

<script>

    $(".target").change(function () {

        if ($("#tahun").val() != "" && $("#bulan").val() != "") {

            $("#frame-content3").contents().find("html").remove();
            $('#image').attr('src', '');
            $('#contentReport').empty();

            $.post("DataBisnisDitgas/GetReportType", { tahun: $("#tahun").val(), bulan: $("#bulan").val() }, function (data) {
                if (data == "pdf") {
                    //                alert("aaa");
                    loadIframe('frame-content3', '/DataBisnisDitGas/GetPdfReport?tahun=' + $("#tahun").val() + '&bulan=' + $("#bulan").val());
                } else if (data == "image") {

                    $.post("DataBisnisDitgas/GetImage", { tahun: $("#tahun").val(), bulan: $("#bulan").val() }, function (data) {
                        //                    alert(data);
                        ////                    $('#image').attr('src', data);
                        //                    $('#content').html(data);
                        $('#image').attr('src', data);
                        //                    alert("sudah");
                    });

                } else {
                    var dl = "";
                    $("#contentReport").append(dl);
                }
            });
        }
    });

    $(document).ready(function () {

        var currentYear = new Date().getFullYear();

        for (var i = 1; i <= 10; i++) {
            $("#tahun").append(
                $("<option></option>")
                .attr("value", currentYear)
                .text(currentYear)
            );
            currentYear--;
        }

    });
</script>
<h3>Business Report</h3>
